# Configuración de desarrollo/producción
DEVELOPMENT=False
DEBUG=False

# Clave secreta de Django (generar una nueva para producción)
SECRET_KEY=your-secret-key-here

# Base de datos (PostgreSQL en Neon para producción)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require&channel_binding=require

# URLs del frontend para emails y CORS
FRONTEND_ACTIVATION_URL=https://your-frontend.vercel.app/activate
FRONTEND_PASSWORD_RESET_URL=https://your-frontend.vercel.app/reset-password

# Configuración de email (para producción)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=WeSolar <no-reply@wesolar.com>

# Configuraciones adicionales de seguridad para producción
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
