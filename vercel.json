{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "DEVELOPMENT": "False",
    "SECRET_KEY": "@secret-key",
    "DATABASE_URL": "@database-url",
    "DEBUG": "False",
    "PYTHONPATH": ".:/var/task"
  },
  "functions": {
    "api/index.py": {
      "includeFiles": "**"
    }
  }
}
